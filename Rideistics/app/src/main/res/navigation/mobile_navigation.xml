<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.rideistics.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.rideistics.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <!-- Other actions for dashboard might be here -->
        <action
            android:id="@+id/action_dashboard_to_future_rides"
            app:destination="@id/navigation_future_rides" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.rideistics.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_future_rides"
        android:name="com.example.rideistics.ui.futurerides.FutureRidesFragment"
        android:label="Estimate Rides"
        tools:layout="@layout/fragment_future_rides" />


</navigation>
